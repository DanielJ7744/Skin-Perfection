[
  {
    "name": "theme_info",
    "theme_name": "natural-beauty",
    "theme_version": "1.0.0",
    "theme_author": "Kari Thomas",
    "theme_documentation_url": "https:\/\/www.naturalorganicskincare.com",
    "theme_support_url": "https:\/\/www.naturalorganicskincare.com"
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32x32"
      }
    ]
  },
  {
    "name": "Free Shipping",
    "settings": [
      {
        "type": "text",
        "id": "free_shipping_value",
        "label": "Amount for free shipping",
        "default": "100"
      },
      {
        "type": "text",
        "id": "free_shipping_completion",
        "label": "Text for free shipping completion",
        "default": "Congrats! You unlocked free shipping"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "collection",
        "id": "cart_recommend_collection",
        "label": "Collection for cart recommendation"
      },
      {
        "type": "text",
        "id": "cart_recommend_title",
        "label": "Title",
        "default": "Recommended products"
      }
    ]
  },
  {
    "name": "Product Badges",
    "settings": [
      {
        "type": "color",
        "id": "sale_badge_color",
        "label": "Sale badge color",
        "default": "#C92228"
      },
      {
        "type": "color",
        "id": "best_seller_badge_color",
        "label": "Best Seller badge color",
        "default": "#99CC00"
      },
      {
        "type": "color",
        "id": "staff_pick_badge_color",
        "label": "Staff Pick color",
        "default": "#000000"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_headings",
        "label": "Headings font-family",
        "default": "sans-serif"
      }
    ]
  },
  {
    "name": "Offcanvas Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "offcanvas_cart_show_note",
        "label": "Show note input",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "offcanvas_cart_show_view_cart",
        "label": "Show \"View Cart\" link",
        "default": true
      },
      {
        "type": "header",
        "content": "--- Cart Upsell ---"
      },
      {
        "type": "checkbox",
        "id": "cart_upsell_enable",
        "label": "Enable cart upsell",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_upsell_metafield",
        "label": "Metafield namespace\/key",
        "default": "ecomify.upsells",
        "info": "Please [create the metafield above first](https:\/\/shopify.com\/admin\/metafields\/product\/create) and then add the upsell products to it."
      },
      {
        "type": "text",
        "id": "cart_upsell_title",
        "label": "Title",
        "default": "Recommended products"
      }
    ]
  },
  {
    "name": "Social links",
