{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'
%}

<section id="newsletter-{{ section.id }}" class="newsletter {{ section.settings.bg_color }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="container">
        <div class="row align-items-lg-center">
            <div class="col-lg-6 pb-6 pb-lg-0">
                {% unless section.settings.title == blank %}
                    <h2 class="title mb-4 text-center {{ section.settings.title_size }}">
                        {{ section.settings.title }}
                    </h2>
                {% endunless %}
                {% unless section.settings.description == blank %}
                    <div class="description rte mb-7 text-center">
                        {{ section.settings.description }}
                    </div>
                {% endunless %}
                {% form 'customer' %}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    {{ form.errors | default_errors }}
                    {% if form.posted_successfully? %}
                        <p class="alert alert-success">
                            {{ 'general.newsletter.confirmation_text' | t }}
                        </p>
                    {% endif %}
                    <div class="input-group mb-2 {{ section.settings.input_group_size }}">
                        <input 
                            type="email" 
                            name="contact[email]" 
                            size="30"
                            class="form-control" 
                            value="{% if customer.email != blank %}{{ customer.email }}{% endif %}" 
                            placeholder="{{ 'general.newsletter.input_label' | t }}" 
                            aria-label="{{ 'general.newsletter.input_label' | t }}" 
                            autocorrect="off" 
                            autocapitalize="off">
                        <button class="btn {{ section.settings.btn_color }} {{ section.settings.btn_size }}" type="submit" name="commit">
                            {{ 'general.newsletter.submit_button' | t }}
                        </button>
                    </div>
                {% endform %}
            </div>
            <div class="col-lg-6">
                <div id="newsletter-support" class="mx-auto" style="max-width: 400px">
                    {% unless section.settings.support_title == blank %}
                        <h3 class="title mb-3 text-center {{ section.settings.support_title_size }}">
                            {{ section.settings.support_title }}
                        </h3>
                    {% endunless %}
                    {% unless section.settings.support_description == blank %}
                        <div class="description rte mb-0 text-center {{ section.settings.support_description_size }}">
                            {{ section.settings.support_description }}
                        </div>
                    {% endunless %}
                </div>
            </div>
        </div>
    </div>
</section>

<div class=" {{ section.settings.bg_color }} ">
    <hr class="m-0 opacity-50">
</div>

