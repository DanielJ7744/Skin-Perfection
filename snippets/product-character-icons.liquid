<ul class="product-icons">
    {% assign iconList = block.settings.icon_list %}
    {% for tag in product.tags %}
        {%- assign tagIndicator = tag | append: "," -%}
        {% if iconList contains tagIndicator %}
            {%- assign iconName = tag | append: ".jpg" -%}
            <li>
                <img src="{{ iconName | asset_img_url : '60x' }}" title="{{tag}}" alt="{{tag}}" loading="lazy">
            </li>
        {% endif %}
    {% endfor %}
</div>

{% style %}
    #shopify-section-{{ section.id }} .product-icons img{
        width: {{block.settings.icon_width}}px
    }
    #shopify-section-{{ section.id }} .product-icons {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        flex-wrap: wrap;
        margin-bottom: 20px;
        justify-content: center;
        list-style: none;
    }
    #shopify-section-{{ section.id }} .product-icons li {
        display: flex;
        align-items: center;
        justify-content: center;
    }
{% endstyle %}
